# API endpoint for shot data
VITE_API_URL=https://api.decenza.coffee

# WebSocket endpoint for real-time updates
VITE_WS_URL=wss://ws.decenza.coffee

# Optional: Map tiles URL (default uses OpenStreetMap)
# VITE_MAP_TILES_URL=https://api.maptiler.com/maps/basic-v2/{z}/{x}/{y}.png?key=YOUR_KEY

# Optional: Mapbox token (if using Mapbox GL instead of MapLibre)
# VITE_MAPBOX_TOKEN=pk.xxx

# Enable mock mode for local development (generates fake events)
VITE_MOCK_MODE=false
